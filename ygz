--// Setup
local player = game.Players.LocalPlayer
local character = player.Character or player.CharacterAdded:Wait()
local humanoid = character:WaitForChild("Humanoid")

--// Hook Table
local spoofedValues = {
    WalkSpeed = humanoid.WalkSpeed,
    JumpPower = humanoid.JumpPower
}

--// Metatable Hooking
local mt = getrawmetatable(game)
setreadonly(mt, false)
local oldIndex = mt.__index

mt.__index = newcclosure(function(self, key)
    if self == humanoid then
        if spoofedValues[key] ~= nil then
            return spoofedValues[key]
        end
    end
    return oldIndex(self, key)
end)
setreadonly(mt, true)

--// GUI Setup
local screenGui = Instance.new("ScreenGui", player:WaitForChild("PlayerGui"))
screenGui.Name = "SilentSpooferGui"

local frame = Instance.new("Frame", screenGui)
frame.Size = UDim2.new(0, 250, 0, 300)
frame.Position = UDim2.new(0, 10, 0.5, -150)
frame.BackgroundColor3 = Color3.fromRGB(30, 30, 30)
frame.BorderSizePixel = 0
frame.Active = true
frame.Draggable = true

local scrollFrame = Instance.new("ScrollingFrame", frame)
scrollFrame.Size = UDim2.new(1, 0, 1, 0)
scrollFrame.CanvasSize = UDim2.new(0, 0, 0, 300)
scrollFrame.ScrollBarThickness = 8
scrollFrame.BackgroundColor3 = Color3.fromRGB(45, 45, 45)

local layout = Instance.new("UIListLayout", scrollFrame)
layout.Padding = UDim.new(0, 6)
layout.SortOrder = Enum.SortOrder.LayoutOrder

--// Button Factory
local function createButton(text, onClick)
	local button = Instance.new("TextButton")
	button.Size = UDim2.new(1, -10, 0, 40)
	button.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
	button.TextColor3 = Color3.new(1, 1, 1)
	button.Font = Enum.Font.SourceSansBold
	button.TextSize = 18
	button.Text = text
	button.AutoButtonColor = true
	button.Parent = scrollFrame
	button.MouseButton1Click:Connect(onClick)
end

--// WalkSpeed Hook Button
createButton("Set WalkSpeed to 100", function()
    humanoid.WalkSpeed = 100 -- actual change
    spoofedValues.WalkSpeed = 100 -- spoofed return value
end)

--// JumpPower Hook TextBox
local textBox = Instance.new("TextBox")
textBox.Size = UDim2.new(1, -10, 0, 40)
textBox.BackgroundColor3 = Color3.fromRGB(60, 60, 60)
textBox.TextColor3 = Color3.new(1, 1, 1)
textBox.Font = Enum.Font.SourceSansBold
textBox.TextSize = 18
textBox.PlaceholderText = "Enter JumpPower"
textBox.Text = ""
textBox.ClearTextOnFocus = false
textBox.Parent = scrollFrame

textBox.FocusLost:Connect(function(enterPressed)
	if enterPressed then
		local value = tonumber(textBox.Text)
		if value then
			humanoid.JumpPower = value
			spoofedValues.JumpPower = value
		end
	end
end)
